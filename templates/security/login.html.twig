<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Bienvenue sur Hrdoc !
			{% endblock %}
		</title>
		<link rel="icon" href="{{ asset('images/LOGO_MCONNECT_RH-03.svg') }}">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer"/>

		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('styles/login.css') }}">
		{% endblock %}

	</head>

	<body>

		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				Vous êtes connecté en tant que
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}
		<div class="container">
			{{ include('./components/message.html.twig')}}

			<div class="banner-wrapper">
						<img src="{{ asset('images/hrdoc_logo.png') }}" alt="">
			</div>


			<div class="screen">
				<span class="line__wrapper"></span>
				<div class="screen__content">
					<form method="post" class="login">
						<div class="login__field">
							<i class="login__icon fas fa-user"></i>
							<input class="login__input" type="text" value="{{ last_username }}" name="_username" id="inputEmail"  autofocus>
						</div>
						<div class="login__field">
							<i class="login__icon fas fa-lock"></i>
							<input type="password" name="_password" class="login__input" autocomplete="current-password"  placeholder="{{ 'password' |trans }}">
						</div>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<button class="btn">
							<span class="button__text">Se connecter</span>
						</button>
					</form>
				</div>
				<div class="screen__background">
					<span class="screen__background__shape screen__background__shape1"></span>
				</div>
			</div>
		</div>
	</body>
</html>
